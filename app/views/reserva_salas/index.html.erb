<h1>Reservas de salas</h1>

<table>
  <thead>
    <tr>
      <th>Reserva</th>
      <th>Sala</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reserva_salas.each do |reserva_sala| %>
      <tr>
        <td><%= reserva_sala.reserva.dia %></td>
        <td><%= reserva_sala.sala %></td>
        <td><%= link_to 'Mostrar', reserva_sala %></td>
        <td><%= link_to 'Editar', edit_reserva_sala_path(reserva_sala) %></td>
        <td><%= link_to 'Eliminar', reserva_sala, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

